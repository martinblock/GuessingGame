<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:background="@color/backGround"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context="com.example.lopez.MemoryMatch.SecondActivity">


    <include
        layout="@layout/images"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        tools:ignore="MissingPrefix"
        android:id="@+id/include" />

    <TextView
        android:id="@+id/tvPlayer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/include"
        android:layout_marginStart="13dp"
        android:layout_marginTop="15dp"
        android:fontFamily="casual"
        android:text="Player 1: 0"
        android:textColor="@color/textColor"
        android:textSize="32dp" />

    <TextView
        android:id="@+id/tvPlayer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvPlayer1"
        android:layout_alignBottom="@+id/tvPlayer1"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="14dp"
        android:fontFamily="casual"
        android:text="Player 2: 0"
        android:textColor="@color/textColor"
        android:textSize="32dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/include"
        android:layout_alignEnd="@+id/tvPlayer2"
        android:layout_marginBottom="15dp"
        android:src="@drawable/memorymatch" />
</RelativeLayout>